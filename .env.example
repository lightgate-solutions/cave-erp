# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cave_erp

# Authentication (Better Auth)
BETTER_AUTH_SECRET=your-better-auth-secret
BETTER_AUTH_URL=http://localhost:3000
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Arcjet (Security)
ARCJET_KEY=your-arcjet-key

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_PASSWORD_RESET_EMAIL=noreply@yourdomain.com
RESEND_SENDER_EMAIL=noreply@yourdomain.com

# Cloudflare R2 (File Storage)
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_PUBLIC_URL=https://your-public-url.r2.dev
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_TOKEN_VALUE=your-token-value
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-access-key

# Upstash (Search/Cache)
UPSTASH_SEARCH_REST_URL=your-upstash-search-url
UPSTASH_SEARCH_REST_TOKEN=your-upstash-search-token
UPSTASH_DISABLE_TELEMETRY=1

# Convex (Backend)
NEXT_PUBLIC_CONVEX_URL=your-convex-url
CONVEX_SITE_URL=your-convex-site-url
CONVEX_DEPLOY_KEY=your-convex-deploy-key
CONVEX_DEPLOYMENT=your-convex-deployment

# Paystack (Payment Gateway)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Cron Jobs
CRON_SECRET=your-cron-secret-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Build Configuration (Optional)
ANALYZE=false
